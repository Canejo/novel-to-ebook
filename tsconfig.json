{
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2015", "dom"],
      "target": "es2015",
      "outDir": "./lib",
      "removeComments": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*",
      "node_modules/@types/puppeteer/index.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*-spec.ts"
    ]
}